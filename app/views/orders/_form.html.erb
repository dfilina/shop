<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div class="alert alert-danger fade in">
      <strong>
        <%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:
      </strong>
      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, size: 40, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :address %><br>
    <%= f.text_area :address, rows: 3, cols:40, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :email %><br>
    <%= f.text_field :email, size: 40, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :pay_type %><br>
    <%= f.select :pay_type, Order::PAYMENT_TYPES, prompt: 'Select a payment method', class: 'form-control' %>
  </div>

  <%= f.submit 'Place Order', class: 'btn btn-primary' %>
<% end %>
