<tr>
  <td><%= line_item.quantity %> &times;</td>
  <td><%= line_item.product.title %></td>
  <td class="item-price"><%= number_to_currency(line_item.total_price) %></td>
  <td>
    <%= link_to line_item, method: :delete, data: { confirm: 'Are you sure?' },
        class: 'btn btn-danger', title: 'Remove', 'data-toggle' => 'tooltip', 'data-placement' => 'top' do %>
      <%= fa_icon 'trash-o' %>
    <% end %>
  </td>
</tr>
